{
  "name": "site",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "repository": {
    "url": "https://github.com/hardfist/site",
    "type": "git"
  },
  "scripts": {
    "precommit": "lint-staged && npm run lint",
    "client:dev": "run-p client:bundle-dev client:ssr-dev",
    "client:ssr-dev": "BABEL_ENV=ssr NODE_ENV=development webpack --watch --config client/webpack.config.ssr.js",
    "client:bundle-dev": "BABEL_ENV=client NODE_ENV=development webpack-dev-server --config client/webpack.config.dev.js",
    "server:dev": "BABEL_ENV=server NODE_ENV=development nodemon --exec babel-node server/app.ts  --extensions '.ts,.tsx'",
    "debug:client": "BABEL_ENV=client NODE_ENV=development node --inspect-brk ./node_modules/.bin/webpack-dev-server --config client/webpack.config.dev.js",
    "debug:server": "BABEL_ENV=server NODE_ENV=development babel-node --inspect-brk  server/app.ts --exec babel-node  --extensions '.ts,.tsx'",
    "deploy": "pm2 deploy ecosystem.config.js production",
    "format": "prettier-eslint --write public/**/*.{js,ts}",
    "lint:client": "npx tsc -p client",
    "lint:server": "npx tsc -p server",
    "lint": "npm run lint:client && npm run lint:server",
    "icon:build": "rm client/assets/fonts/* && icon-font-generator --prefix topfeed-icon --name topfeed-icon topfeed client/assets/svg/* -o client/assets/fonts",
    "icon:preview": "open client/assets/fonts/topfeed-icon.html",
    "clean:client": "rimraf server/public/buildClient",
    "clean:server": "rimraf server/public/buildServer"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
